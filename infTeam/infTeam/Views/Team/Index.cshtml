@{
    ViewBag.Title = "Equipes";
}


<div class="container">
    <div class="row">
        @Html.Partial("ProfileCol")
        <!-- Equipes -->
        <div class="col-lg-9 contentBloco">
            <h2>Equipes</h2>
            <hr />
            <a href="@Url.Action("Create")" class="btn btn-primary btn-xs pull-right rightButtonsMargin"><b>+</b> Adicionar nova Equipe</a>
            <table class="table table-striped custab">
                <thead>
                </thead>
                @foreach (var team in ViewBag.AllTeams)
                {
                    <tr>
                        <td>
                            <div class="bottom btn btn-sm">
                                <a class="btn btn-success btn-sm" href="@Url.Action("Details/" + team.Id)">
                                    @team.Name
                                </a>
                            </div>
                        </td>
                        <td>
                            @team.Description
                        </td>
                        <td>
                            @team.Profiles.Count Membros
                        </td>
                        <td class="text-center">
                            <a class='btn btn-info btn-xs' href="@Url.Action("Edit", "Team", new { id = team.Id })"><span class="glyphicon glyphicon-edit"></span> Editar</a> 
                            <a href="@Url.Action("Delete", "Team", new { id = team.Id })" class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-remove"></span> Deletar</a>
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>
