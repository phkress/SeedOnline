@{
    ViewBag.Title = "Edit";
}

<div class="container">
    <div class="row">
        <!-- ProfileCard-->
        <div class="col-lg-3">
            <div class="card hovercard">
                <div class="cardheader">
                </div>
                <div class="avatar">
                    <img alt="" src="@ViewBag.Profilein.ProfilePhoto">
                </div>
                <div class="info">
                    <div class="title">
                        <a target="_blank" href="http://scripteden.com/">@ViewBag.ProfileIn.Name</a>
                    </div>
                    <div class="desc">@ViewBag.ProfileIn.Role</div>
                    <div class="desc">@ViewBag.Profilein.Email</div>
                    <div class="desc"></div>
                </div>
                <hr />
                <div class="info-menu">
                    <div class="title sub-title">
                        <a target="_blank" href="http://scripteden.com/">@Html.ActionLink("Equipes", "Index", "Team")</a>
                    </div>
                    @foreach (var team in ViewBag.ProfileIn.Teams)
                    {
                        <div class="bottom">
                            <a class="btn btn-sm" href="https://twitter.com/webmaniac">
                                @team.Name
                            </a>
                        </div>
                    }
                </div>
                <div class="info-menu">
                    <div class="title sub-title">
                        <a target="_blank" href="http://scripteden.com/">Contatos</a>
                    </div>
                    @foreach (var contact in ViewBag.ProfileIn.Contacts)
                    {
                        <div class="bottom">
                            <a class="btn btn-sm" href="https://twitter.com/webmaniac">
                                @contact.Name
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
        <!-- Edit -->
        <div class="col-lg-9 contentBloco">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h2>Editar @ViewBag.SelectedTeam.Name</h2>
                    <hr />

                    <div class="form-group">
                        <div class="col-md-10">
                            <label for="nameInput">Nome:</label>
                            <input id="nameInput" type="text" value="@ViewBag.SelectedTeam.Name" name="Name" class="form-control" />
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-10">
                            <label for="nameInput">Descrição:</label>
                            <input type="text" value="@ViewBag.SelectedTeam.Description" name="Description" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            <input type="submit" value="Salvar" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            }
            <div>
                @Html.ActionLink("Voltar", "Index")
            </div>
        </div>
    </div>
</div>






@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
